#include <stdio.h>
#include <limits.h> 
int reverse(int x) {
    long rev = 0; 
    while (x != 0) {
        int digit = x % 10;
        rev = rev * 10 + digit;
        x /= 10;
        if (rev > INT_MAX || rev < INT_MIN) {
            return 0; 
        }
    }
    return (int)rev;
}

int main() {
    int num;
    printf("Enter a 32-bit signed integer: ");
    scanf("%d", &num);

    int result = reverse(num);
    printf("Reversed number: %d\n", result);

    return 0;
}
